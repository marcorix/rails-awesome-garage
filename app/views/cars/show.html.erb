<%= render 'shared/navbar' %>

<div class="container w-50">
  <div class="wrapper">

    <div class="show-car">
      <%= image_tag @car.image_url %>

      <div class="show-car-middle">
        <div class="show-car-info">
          <h2><%= @car.brand %></h2>
          <h3><%= @car.model %></h3>
          <p><%= @car.fuel %></p>
          <p><%= @car.year %></p>
          <div class="favourite-btn">
            <% if @car.favourites.empty? %>
              <%= simple_form_for [@car, @favourite] do |f| %>
                <%= f.submit 'Save in my Garage', class: "btn btn-danger" %>
              <% end %>
            <% else %>
              <p>This car is parked in your garage!</p>
            <% end %>
          </div>
        </div>


        <div class="reviews-form">
          <%= simple_form_for [@car, @review] do |f|%>
            <%= f.input :comment, label: false, placeholder: "Comment here.." %>
              <%= f.input :rating, collection: 0..5, label: false %>
              <%= f.submit 'Send' %>
          <% end %>
        </div>

      </div>

    <div class="reviews-list">
      <hr>
      <% @car.reviews.each do |review| %>
        <p><%= review.comment %></p>
        <p><%= '⭐️' * review.rating %></p>
        <hr>
      <% end %>
    </div>

    </div>
  </div>

</div>
